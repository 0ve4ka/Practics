<Page x:Class="PracticNumberFive.Pages.ExFourPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticNumberFive.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExFourPage" Style="{StaticResource Page}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Задание 4" Grid.ColumnSpan="2"/>
        <TextBlock Text="Число N = " Grid.Row="1" VerticalAlignment="Center"/>
        <TextBlock Text="Число X = " Grid.Row="2" VerticalAlignment="Center"/>

        <TextBlock x:Name="Answer" Grid.Row="3" Grid.ColumnSpan="2"/>

        <Button x:Name="BtnExFour" Grid.Row="4" Style="{StaticResource ExButton}"
                 Grid.ColumnSpan="2" Click="BtnExFour_Click"/>

        <TextBox x:Name="TBoxNbN" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="TBoxNbX" Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Page>
