<Page x:Class="PracticNumberFive.Pages.ExSevenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticNumberFive.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExSevenPage" Style="{StaticResource Page}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Второе дополнительное задание" Grid.ColumnSpan="2"/>
        <TextBlock Text="Число E = " Grid.Row="1" VerticalAlignment="Center"/>

        <TextBlock x:Name="Answer" Grid.Row="2" Grid.ColumnSpan="2"/>

        <Button x:Name="BtnExSeven" Grid.Row="4" Style="{StaticResource ExButton}"
                 Grid.ColumnSpan="2" Click="BtnExSeven_Click"/>

        <TextBox x:Name="TBoxNbE" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Page>
