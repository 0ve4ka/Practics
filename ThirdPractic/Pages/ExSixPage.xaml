<Page x:Class="ThirdPractic.Pages.ExSixPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ThirdPractic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Первое дополнительное задание" Style="{StaticResource StartPage}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Style="{StaticResource InfoLb}" Content="Первое дополнительное задание" 
               Grid.ColumnSpan="2"/>
        <Label Content="Целое число N=" Style="{StaticResource Lb}"
               Grid.Row="1"/>
        <TextBox x:Name="TbNumberN" Grid.Column="1" Grid.Row="1"/>
        <TextBlock x:Name="Answer" Grid.Row="2" Grid.ColumnSpan="2"
                   FontSize="20" TextAlignment="Center"/>
        <Button Style="{StaticResource TbSubstract}" Grid.Row="3"
                Grid.ColumnSpan="2" x:Name="BtnSubExSix" Click="BtnSubExSix_Click"/>
    </Grid>
</Page>
