<Page x:Class="FourthPractic.Pages.ExThreePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FourthPractic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExThreePage" Style="{StaticResource Page}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Задание 3" Grid.ColumnSpan="2"/>
        <Label Content="Номер элемента = " Grid.Row="1" FontSize="20"/>
        <TextBox x:Name="TbNbNExThree" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Значение элемента = " Grid.Row="2" FontSize="20"/>
        <TextBox x:Name="TbNbFExThree" Grid.Column="1" Grid.Row="2"/>
        <TextBlock x:Name="Answer" Grid.Row="3" Grid.ColumnSpan="2"/>
        <Button Style="{StaticResource ExButton}" Grid.ColumnSpan="2" Grid.Row="4" Click="Button_Click"/>
    </Grid>
</Page>
