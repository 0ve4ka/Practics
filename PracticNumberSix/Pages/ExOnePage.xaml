<Page x:Class="PracticNumberSix.Pages.ExOnePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticNumberSix.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExOnePage" Style="{StaticResource Page}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Задание 1" Grid.ColumnSpan="2"/>
        <TextBlock Grid.Row="1" Text="Число Y =" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="2" Text="Число X =" VerticalAlignment="Center"/>

        <TextBox x:Name="TbNbY" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="TbNbX" Grid.Column="1" Grid.Row="2"/>

        <TextBlock x:Name="Answer" Grid.Row="3" Grid.ColumnSpan="2"/>

        <Button x:Name="BtnExOne" Style="{StaticResource ExButton}" Grid.Row="4" Grid.ColumnSpan="2" Click="BtnExOne_Click"/>
    </Grid>
</Page>
