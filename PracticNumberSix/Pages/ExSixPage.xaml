<Page x:Class="PracticNumberSix.Pages.ExSixPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticNumberSix.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExSixPage" Style="{StaticResource Page}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Второе дополнительное задание" Grid.ColumnSpan="3" />
        <TextBlock Text="Кол-во чисел фибоначчи" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="TbNbExSix" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>

        

       
        <TextBlock Text="Ответ" Grid.Row="2"/>

        <TextBlock x:Name="Answer" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"/>

        <Button x:Name="BtnExSix" Grid.Row="4" Style="{StaticResource ExButton}"
                Margin="0" Grid.ColumnSpan="3" Click="BtnExSix_Click"/>

       
    </Grid>
</Page>
